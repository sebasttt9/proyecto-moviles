// Optimización de rendimiento
:host {
  display: block;
  contain: layout style paint;
}

// Variables CSS para evitar repetición
:root {
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --glass-bg: rgba(255, 255, 255, 0.15);
  --glass-bg-hover: rgba(255, 255, 255, 0.25);
  --shadow-light: 0 8px 32px rgba(31, 38, 135, 0.37);
  --border-glass: 1px solid rgba(255, 255, 255, 0.18);
  --text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

// Global Content Styling
ion-content {
  --background: var(--primary-gradient);
  color: white !important;
  --padding-top: 0;
  --padding-bottom: 0;
  --padding-start: 0;
  --padding-end: 0;
  min-height: 100vh;
}

// Toolbar Styling
ion-toolbar {
  --background: #007bff !important;
  
  ion-buttons[slot="start"] ion-button {
    --color: white;
    --border-radius: 8px;
    --padding-start: 8px;
    --padding-end: 8px;
    margin-left: 8px;
    
    ion-icon {
      font-size: 20px;
      margin-right: 4px;
    }
    
    .home-text {
      font-size: 14px;
      font-weight: 500;
      
      @media (max-width: 480px) {
        display: none;
      }
    }
    
    &:hover {
      --background: rgba(255, 255, 255, 0.1);
    }
  }
  
  ion-title {
    text-align: center !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    width: 100% !important;
    
    .logo {
      height: 40px;
      width: auto;
      object-fit: contain;
      margin: 0 auto;
      display: block;
    }
  }
}

// Hero Section
.hero {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40px 20px;
  will-change: auto;
  transform: translateZ(0);
  
  .hero-container {
    max-width: 1200px;
    width: 100%;
    padding-bottom: 40px;
  }
  
  .hero-content {
    text-align: center;
    
    h1 {
      font-size: clamp(2.2rem, 5vw, 3.5rem);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 20px;
      color: white !important;
      text-shadow: var(--text-shadow);
    }
    
    p {
      font-size: clamp(1.1rem, 3vw, 1.3rem);
      margin-bottom: 40px;
      color: rgba(255, 255, 255, 0.9);
      line-height: 1.6;
    }
  }
}

// Cards Styling - Simplificado
.services-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  margin-top: 40px;
  
  @media (max-width: 768px) {
    grid-template-columns: 1fr;
    gap: 20px;
  }
}

.service-card {
  background: var(--glass-bg);
  backdrop-filter: blur(10px);
  border: var(--border-glass);
  border-radius: 20px;
  padding: 30px;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  
  &:hover, &:focus {
    transform: translateY(-5px);
    background: var(--glass-bg-hover);
    box-shadow: var(--shadow-light);
  }
  
  .service-icon {
    font-size: 48px;
    margin-bottom: 20px;
    color: #FFD700;
  }
  
  .service-title {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 10px;
    color: white;
  }
  
  .service-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.5;
    margin-bottom: 15px;
  }
  
  .service-price {
    font-size: 1.4rem;
    font-weight: 700;
    color: #4CAF50;
    margin-bottom: 20px;
  }
  
  .service-features {
    text-align: left;
    margin-bottom: 25px;
    
    li {
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 8px;
      padding-left: 20px;
      position: relative;
      
      &:before {
        content: "✓";
        position: absolute;
        left: 0;
        color: #4CAF50;
        font-weight: bold;
      }
    }
  }
}

// Responsive Design
@media (max-width: 768px) {
  .hero {
    padding: 20px 15px;
    
    .hero-container {
      padding-bottom: 20px;
    }
    
    .hero-content h1 {
      margin-bottom: 15px;
    }
    
    .hero-content p {
      margin-bottom: 30px;
    }
  }
  
  .services-cards {
    margin-top: 20px;
  }
  
  .service-card {
    padding: 20px;
    
    .service-icon {
      font-size: 36px;
      margin-bottom: 15px;
    }
    
    .service-title {
      font-size: 1.5rem;
    }
    
    .service-price {
      font-size: 1.2rem;
    }
  }
}

@media (max-width: 480px) {
  .hero {
    padding: 15px 10px;
  }
  
  .service-card {
    padding: 15px;
    
    .service-icon {
      font-size: 32px;
    }
    
    .service-title {
      font-size: 1.3rem;
    }
  }
}

// Botones optimizados
.btn {
  --background: linear-gradient(135deg, #FF6B6B 0%, #EE5A52 100%);
  --color: white;
  --border-radius: 25px;
  --padding-top: 12px;
  --padding-bottom: 12px;
  --padding-start: 24px;
  --padding-end: 24px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
  
  &:hover {
    --background: linear-gradient(135deg, #EE5A52 0%, #FF6B6B 100%);
    transform: translateY(-2px);
  }
}

// Animaciones
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeInUp 0.6s ease-out;
}

// Alerts personalizados
.custom-alert {
  --background: rgba(255, 255, 255, 0.95);
  --color: #333;
  border-radius: 15px;
  
  .alert-head {
    color: #007bff;
    font-weight: 600;
  }
  
  .alert-message {
    color: #666;
    line-height: 1.5;
  }
  
  .alert-button {
    --background: #007bff;
    --color: white;
    --border-radius: 8px;
    font-weight: 600;
  }
}
        
      
    
    
